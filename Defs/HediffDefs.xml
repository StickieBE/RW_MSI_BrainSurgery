<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef Abstract="True" Name="Lobotomy_effect_base" ParentName="AddedBodyPartBase">
    <!-- item spawned if trait is removed -->
    <!--<spawnThingOnRemoved>BionicStomach</spawnThingOnRemoved>-->
    <!-- added effects -->
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1</partEfficiency>
      <betterThanNatural>true</betterThanNatural>
    </addedPartProps>
  </HediffDef>

  <HediffDef ParentName="Lobotomy_effect_base">
    <defName>Lobotomy_effect_frontalLobe</defName>
    <!-- displayName in health tab shown to player -->
    <label>lobotomized (frontal lobe)</label>
    <labelNoun>lobotomizedFrontalLobe</labelNoun>
    <!--<hediffClass>Lobotomize.Test</hediffClass> <!-- worker class? -->
  </HediffDef>

  <HediffDef ParentName="Lobotomy_effect_base">
    <defName>Lobotomy_effect_limbicLobe</defName>
    <!-- displayName in health tab shown to player -->
    <label>lobotomized (limbic lobe)</label>
    <labelNoun>lobotomizedLimbicLobe</labelNoun>
    <stages>
      <li>
        <opinionOfOthersFactor>100</opinionOfOthersFactor>
        <partIgnoreMissingHP>true</partIgnoreMissingHP>
        <socialFightChanceFactor>-10.5</socialFightChanceFactor>
        <capMods>
          <li>
            <capacity>Talking</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Eating</capacity>
            <setMax>0.2</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.4</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="Lobotomy_effect_base">
    <defName>Lobotomy_effect_cerebellum</defName>
    <!-- displayName in health tab shown to player -->
    <label>lobotomized (cerebellum)</label>
    <labelNoun>lobotomizedCerebellum</labelNoun>
    <stages>
      <li>
        <opinionOfOthersFactor>100</opinionOfOthersFactor>
        <partIgnoreMissingHP>true</partIgnoreMissingHP>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef Name="Lobotomy_thoughts_base" Abstract="True">
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
  </ThoughtDef>

  <ThoughtDef ParentName="Lobotomy_thoughts_base">
    <defName>Lobotomy_thoughts_LimbicLobe</defName>
    <hediff>Lobotomy_effect_limbicLobe</hediff> <!-- attached Hediff -->
    <stages>
      <li>
        <label>Lobotomized (limbic lobe)</label>
        <description>Durrrr.....</description>
        <baseMoodEffect>100</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
