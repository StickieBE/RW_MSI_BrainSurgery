<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--
		Abstract stops the incomplete base class from loading, as to not error out the game.
		If abstract, the game requires you to name the key entry directly,
		instead of using defName parameter.
	-->
	<RecipeDef Abstract="True" Name="Lobotomy_base" ParentName="SurgeryFlesh">
		<effectWorking>Surgery</effectWorking> <!-- effect when performing action -->
		<soundWorking>Recipe_Surgery</soundWorking>
		<recipeUsers> <!-- Kind of object action can be performed on -->
			<li>Human</li>
		</recipeUsers>
		<workAmount>2000</workAmount> <!-- time action takes -->
		<surgerySuccessChanceFactor>5</surgerySuccessChanceFactor> <!-- chance of success -->
		<deathOnFailedSurgeryChance>0.01</deathOnFailedSurgeryChance>
		<skillRequirements> <!-- skill requirements -->
      <Medicine>13</Medicine>
    </skillRequirements>
		<ingredients> <!-- items needed to perform action -->
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts> <!-- bodypart action is performed on -->
			<li>Brain</li>
		</appliedOnFixedBodyParts>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass> <!-- worker class? -->
	</RecipeDef>

	<RecipeDef ParentName="Lobotomy_base">
		<defName>Lobotomy_action_frontalLobe</defName> <!-- classname -->
		<label>lobotomize (frontal lobe)</label> <!-- actionname visible to player -->
		<jobString>Lobotomizing (frontal lobe).</jobString> <!-- action feedback to user while performing -->
		<addsHediff>Lobotomy_effect_frontalLobe</addsHediff> <!-- statechange on success -->
		<description>Turns prisoner into a psychopath.</description> <!-- Description in info menu -->
    <researchPrerequisite>FrontalLobe</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="Lobotomy_base">
		<defName>Lobotomy_action_limbicLobe</defName> <!-- classname -->
		<label>lobotomize (limbic lobe)</label> <!-- actionname visible to player -->
		<jobString>Lobotomizing (limbic lobe).</jobString> <!-- action feedback to user while performing -->
		<addsHediff>Lobotomy_effect_limbicLobe</addsHediff> <!-- statechange on success -->
		<description>Gets rid of thoughts, personality and need for freedom.</description> <!-- Description in info menu -->
    <researchPrerequisite>LimbicSystem</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="Lobotomy_base">
		<defName>Lobotomy_action_cerebellum</defName> <!-- classname -->
		<label>lobotomize (cerebellum)</label> <!-- actionname visible to player -->
		<jobString>Lobotomizing (cerebellum).</jobString> <!-- action feedback to user while performing -->
		<addsHediff>Lobotomy_effect_cerebellum</addsHediff> <!-- statechange on success -->
		<description>Immobilizes a prisoner.</description> <!-- Description in info menu -->
    <researchPrerequisite>Cerebellum</researchPrerequisite>
	</RecipeDef>
</Defs>
